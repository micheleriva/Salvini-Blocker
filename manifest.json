{
  "name": "Salvini-Blocker",
  "version": "0.0.3",
  "author": "Michele Riva,",
  "description": "Come AdBlock, ma per Matteo Salvini.",
  "manifest_version": 3,
  "permissions": ["<all_urls>"],
  "browser_action": {
    "default_title": "Salvini-Blocker",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["dist/salviniblocker.umd.js"]
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}